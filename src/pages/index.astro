---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro'
import Brief from '../components/Brief.astro'
import Problem from '../components/Problem.astro'
import Pricing from '../components/Pricing.astro';
import Faq from '../components/Faq.astro';
import Footer from '../components/Footer.astro';
---

<Layout
    title="Shoutout | Catch Bad Reviews Before They Happen"
    description="Prevent bad reviews before they happen. Give customers a private way to share feedback and turn unhappy customers into loyal fans. Try it free for 30 days."
    canonical="https://shoutout.bio"
    image="/og-image.jpg"
    type="website"
>
	<Header />
	<Hero />
	<Problem />
	<Brief />
	<Pricing />
	<Faq />
	<Footer />
</Layout>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Shoutout.bio",
  "description": "Give your customers a private, friendly way to share feedback before they post it online. Turn unhappy customers into loyal fans and grow your reputation on autopilot.",
  "url": "https://shoutout.bio",
  "applicationCategory": "BusinessApplication",
  "operatingSystem": "Web Browser",
  "offers": {
    "@type": "Offer",
    "price": "1",
    "priceCurrency": "USD",
    "description": "First 3 months for $1, then $9/month"
  },
  "creator": {
    "@type": "Organization",
    "name": "Shoutout.bio"
  },
  "featureList": [
    "Private feedback channel",
    "Smart routing to Google Reviews and social media",
    "Email notifications for negative feedback",
    "Custom branded link",
    "QR code generation",
    "Unlimited feedback requests"
  ]
}
</script>

