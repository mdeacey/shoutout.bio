<style lang="scss">
.legal-page {
    padding: 120px 0 50px 0;
    min-height: 100vh;
}

.legal-content {
    max-width: 960px;
    margin: 60px auto 0 auto;
    padding: 0 20px;

  
    
    .last-updated {
        color: #666;
        font-style: italic;
        margin-bottom: 2rem;
    }

    h3 {
        font-size: 2rem;
        color: #111;
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    p {
        font-size: 1.8rem;
        line-height: 1.6;
        color: #333;
        margin-bottom: 1rem;
    }

    ul {
        margin: 1rem 0;
        padding-left: 20px;

        li {
            font-size: 1.8rem;
            line-height: 1.6;
            color: #333;
            margin-bottom: 0.5rem;
        }
    }

    .contact {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid #dde2e5;

        a {
            color: var(--accent);
            text-decoration: none;

            &:hover {
                text-decoration: underline;
            }
        }
    }
}

@media (max-width: 768px) {
    .legal-page {
        padding: 100px 0 30px 0;
    }

    .legal-content {
  
        h3 {
            font-size: 2rem;
        }

        p, li {
            font-size: 1.5rem;
        }
    }
}
</style>