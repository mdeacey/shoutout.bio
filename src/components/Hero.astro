---
import Bomb from '../assets/bomb.svg'
import Mailbox from '../assets/mailbox.svg'
import Folder from '../assets/folder.svg'
import Savings from '../assets/savings.svg'
import Star from '../assets/star.svg'
---


<section class="product-hero">
    <div class="container">
        <div class="hero-copy">
                    <div class="mobile-bomb">
                        <img src={Bomb.src} alt="Dynamite">
                    </div>
                    <h1 class="h1-title">Catch Bad Reviews Before They Happen</h1>
                    <p>Give your customers a private, friendly way to share feedback â€” before they post it online. Turn unhappy customers into loyal fans and grow your reputation on autopilot.</p>
                    <div class="product-cta">
                      <div class="cta-buttons">
                        <a href="/shoutout" target="_blank" rel="noopener noreferrer" class="button">Live Demo</a>
                        <a href="/getshoutout" target="_blank" rel="noopener noreferrer" class="button button-primary">Get Your $1 Shoutout</a>
                      </div>
                    </div>
                </div>
        <div class="hero-media">
            <img src={Bomb.src} alt="Dynamite">
            <img src={Mailbox.src} alt="Mailbox">
            <img src={Folder.src} alt="Folder">
            <img src={Savings.src} alt="Money">
            <img src={Star.src} alt="Star">
        </div>
    </div>
 </section>


 <style lang="scss">


.product-hero{
  padding: 70px 0 280px 0;
  margin-top: 104px;
  .container{
    position: relative;
  }
  .hero-copy{
    .mobile-bomb{
      display: none;
      text-align: center;
      margin-bottom: 20px;

      img{
        width: 160px;
        height: auto;
      }
    }
    h1{
      max-width: 600px;
      margin: 20px auto;
      text-align: center;
    }

    p{
      max-width: 600px;
      margin: 20px auto;
      text-align: center;
    }

    .cta-buttons{
      display: flex;
      gap: 8px;
      justify-content: center;
      align-items: center;
    }
  }
  .hero-media{
    border-radius: 48px;
    img{
      position: absolute;
      width: 160px;
      &:nth-child(1){
        top: 0;
        left: -100px;
      }
      &:nth-child(2){
        top: 0;
        right: -100px;
      }
      &:nth-child(3){
        top: 250px;
        left: 0;
      }
      &:nth-child(4){
        top: 250px;
        right: 0;
      }
      &:nth-child(5){
        bottom: -220px;
        left: 50%;
        transform: translateX(-50%);
      }
    }
    @media (max-width:960px) {
      img{
        &:nth-child(1), &:nth-child(2), &:nth-child(3), &:nth-child(4), &:nth-child(5){
          display: none;
        }
      }
    }
  }
}

// Mobile hero adjustments
@media (max-width: 960px) {
  .product-hero{
    padding: 70px 0;
  }

  .hero-media{
    display: none; // Hide entire floating images container on mobile
  }

  .hero-copy .mobile-bomb{
    display: block !important; // Show bomb above title
  }
}


 </style>