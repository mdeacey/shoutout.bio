---
import Bomb from '../assets/bomb.svg'
import Mailbox from '../assets/mailbox.svg'
import Folder from '../assets/folder.svg'
import Savings from '../assets/savings.svg'
import Gift from '../assets/gift.svg'
---


<section class="product-hero">
    <div class="container">
        <div class="d-table">
            <div class="d-table-cell center">
                <div class="hero-copy">
                    <h1 class="h1-title">Catch Bad Reviews Before They Happen</h1>
                    <p>Give your customers a private, friendly way to share feedback ‚Äî before they post it online. Turn unhappy customers into loyal fans and grow your reputation on autopilot.</p>
                    <div class="product-cta">
                      <div style="display: flex; gap: 8px; justify-content: center; align-items: center;">
                        <a href="/demo" target="_blank" rel="noopener noreferrer" class="button">Live Demo</a>
                        <a href="/getshoutout" target="_blank" rel="noopener noreferrer" class="button button-primary">Get Shoutout for $1</a>
                      </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-media">
            <img src={Bomb.src} alt="Dynamite">
            <img src={Mailbox.src} alt="Mailbox">
            <img src={Folder.src} alt="Folder">
            <img src={Savings.src} alt="Money">
            <img src={Gift.src} alt="Gift">
        </div>
    </div>
 </section>

<section class="targeting-strip">
    <div class="container">
        <div class="targeting-row">
            <div class="targeting-headline">Built for Local Businesses</div>
            <div class="targeting-icons">
                <div class="icon-chip">üçΩÔ∏è Restaurants</div>
                <div class="icon-chip">üöó Auto Repair</div>
                <div class="icon-chip">üè• Healthcare</div>
                <div class="and-more-text">And more...</div>
            </div>
        </div>
    </div>
</section>

 <style lang="scss">


.product-hero{
  padding: 140px 0 50px 0;
  .container{
    position: relative;
    .d-table{
      height: 500px;
     }
  }
  .hero-media{
    padding: 5px;
    border-radius: 48px;
  }
  .hero-copy{
    h1, p{
      max-width: 600px;
      margin: 20px auto;
    }
  }
  .hero-media{
    img{
      position: absolute;
      width: 160px;
      &:nth-child(1){
        top: 0;
        left: -100px;
      }
      &:nth-child(2){
        top: 0;
        right: -100px;
      }
      &:nth-child(3){
        top: 250px;
        left: 0;
      }
      &:nth-child(4){
        top: 250px;
        right: 0;
      }
      &:nth-child(5){
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
      }
    }
    @media (max-width:700px) {
      img{
        &:nth-child(2), &:nth-child(3),
        &:nth-child(4){
          display: none;
        }
      }
    }
  }
}

.targeting-strip{
  background-color: #cc4b06 !important;
  padding: 16px 0 !important;
  position: relative;
  z-index: 5;
  margin: 0;
    .targeting-row{
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }
  .targeting-headline{
    margin: 0;
    font-size: 2rem;
    font-weight: 600;
    color: #ffffff;
    white-space: nowrap;
  }
  .targeting-icons{
    display: flex;
    flex-wrap: nowrap;
    gap: 8px;
    .icon-chip{
      background-color: rgba(255, 255, 255, 0.2);
            border-radius: 8px;
      padding: 9px 18px;
      font-size: 1.3rem;
      color: #ffffff;
      white-space: nowrap;
      display: inline-block;
    }
    .and-more-text{
      font-size: 1.3rem;
      color: #ffffff;
      white-space: nowrap;
      display: inline-block;
      align-self: center;
    }
  }
}

@media (max-width:700px) {
  .targeting-strip{
    .targeting-row{
      flex-direction: column;
      gap: 15px;
      text-align: center;
    }
    .targeting-icons{
      flex-wrap: wrap;
      justify-content: center;
      .icon-chip{
        font-size: 1.2rem;
        padding: 9px 18px;
      }
      .and-more-text{
        font-size: 1.2rem;
      }
    }
  }
}

 </style>