<style lang="scss">
.announcement-strip {
  background-color: #e55a2b;
  padding: 8px 0;
  text-align: center;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 999;

  .announcement-text {
    margin: -1px 0 0 0;
    color: white;
    font-size: 1.4rem;
    font-weight: 500;

    .short-text {
      display: block;
    }

    .long-text {
      display: none;
    }

    .code-chip {
      background-color: rgba(255, 255, 255, 0.2);
      padding: 2px 6px;
      border-radius: 4px;
      font-weight: 600;
      font-size: 1.2rem;
    }
  }

  // Show longer text on larger screens
  @media (min-width: 768px) {
    .announcement-text {
      .short-text {
        display: none;
      }

      .long-text {
        display: block;
      }
    }
  }
}
</style>