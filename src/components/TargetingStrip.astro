<section class="targeting-strip">
    <div class="container">
        <div class="targeting-content">
            <div class="targeting-headline">Built for Every Business</div>
            <div class="targeting-icons">
                <div class="icon-chip chip-1">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                        <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                    </svg>
                    Services
                </div>
                <div class="icon-chip chip-2">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <path d="M16 10a4 4 0 0 1-8 0"></path>
                    </svg>
                    Retail
                </div>
                <div class="icon-chip chip-3">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    Hospitality
                </div>
                <div class="icon-chip chip-4">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="2" y1="12" x2="22" y2="12"></line>
                        <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                    </svg>
                    Online
                </div>
                <div class="icon-chip chip-5">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    <span class="community-text">Community</span>
                    <span class="and-more-text">...And More</span>
                </div>
            </div>
        </div>
    </div>
</section>

<style lang="scss">
.targeting-strip{
  background-color: #dfe9f3 !important;
  padding: 16px 0 !important;
  height: 40px; // Fixed height
  position: relative;
  z-index: 5;
  margin: 0;

  @media (max-width: 700px) {
    height: auto; // Allow height to grow to fit content on mobile
  }

  .targeting-content{
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .targeting-headline{
    margin: 0;
    font-size: 2rem;
    font-weight: 600;
    color: #111;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .targeting-icons{
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    align-items: center;
    justify-content: flex-end;
    max-height: 50px; // Only show first line (approximate chip height + gap)
    overflow: hidden;

    .icon-chip{
      background-color: #ffffff;
      border: 1px solid #dde2e5;
      border-radius: 8px;
      padding: 9px 18px;
      font-size: 1.3rem;
      color: #111;
      white-space: nowrap;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      flex-shrink: 0;

      svg{
        width: 18px;
        height: 18px;
        flex-shrink: 0;
      }

      .community-text {
        display: block;
      }

      .and-more-text {
        display: none;
      }
    }
  }
}


// Tablet breakpoint - reduce gap
@media (max-width: 900px) {
  .targeting-strip {
    .targeting-content {
      gap: 1rem;
    }
  }
}

// Mobile breakpoint - stack vertically
@media (max-width: 700px) {
  .targeting-strip{
    .targeting-content{
      flex-direction: column;
      gap: 15px;
      text-align: center;
    }

    
    .targeting-icons{
      max-height: 40px; // Keep height restriction - show only first row
      justify-content: center; // Center chips on mobile

      .icon-chip{
        font-size: 1.2rem;
        padding: 9px 18px;

        .community-text {
          display: none;
        }

        .and-more-text {
          display: block;
        }
      }
    }
  }
}
</style>