// Mobile pricing card adjustments
@media (max-width: 768px) {
  .pricing-table {
    .price-item {
      padding: 20px;

      // Container for both cards
      > div[style*="display: flex"] {
        flex-direction: column;
        gap: 15px;

        > div[style*="flex: 1"] {
          flex: 1;
          display: flex;

          .pricing-mini-card {
            flex: 1;
            min-height: 90px;
            display: flex;
            flex-direction: column;
            justify-content: center;

            // Align prices horizontally
            h3 {
              display: flex;
              align-items: baseline;
              justify-content: center;
              gap: 2px;
              flex-wrap: wrap;

              span[style*="text-decoration: line-through"] {
                order: 1;
              }

              // Main price
              span:not([style*="text-decoration: line-through"]):not([style*="color: #9ba5b9"]) {
                order: 2;
                font-size: 2.4rem !important;
              }

              span[style*="color: #9ba5b9"] {
                order: 3;
              }
            }
          }
        }
      }
    }
  }
}

// Show space on desktop, line break on mobile
.mobile-break {
  display: inline;
}

@media (max-width: 456px) {
  .mobile-break::after {
    content: "\A";
    white-space: pre;
  }
}

 </style>