---
export interface Props {
	title?: string;
	description?: string;
	canonical?: string;
	image?: string;
	type?: string;
}

const {
	title = "Shoutout | Catch Bad Reviews Before They Happen",
	description = "Give your customers a private, friendly way to share feedback before they post it online. Turn unhappy customers into loyal fans and grow your reputation on autopilot.",
	canonical = "https://shoutout.bio",
	image = "/og-image.jpg",
	type = "website"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="canonical" href={canonical} />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="reputation management, customer feedback, bad reviews, review prevention, customer service, online reputation, local business, google reviews, social media reviews" />
		<meta name="author" content="Shoutout.bio" />
		<meta name="robots" content="index, follow" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Shoutout.bio" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonical} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={image} />

		<!-- Additional SEO -->
		<meta name="theme-color" content="#ff4e1e" />
		<meta name="language" content="en" />

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
	</head>
	<body>
		<slot />
	</body>
</html>
<style lang="scss" is:global>
	@import url('https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700&display=swap');


	:root {
		--accent: #ff4e1e;
    --dark: #000;
    --tenary: #ecf7f8;
		--base-font: 'Manrope', sans-serif;
	}
	html, body {
		font-family: var(--base-font);
		margin: 0px;
		scroll-behavior: smooth;
    background-image: linear-gradient(to top, #dfe9f3 0%, white 100%);
	}

	.block{
	  display: block;
	}

  .flex{
    display: flex;
    &.center{
      justify-content: center;
    }
  }
.text-container{
  max-width: 600px;
  margin: 50px auto;
}
.h1-title, .h2-title, .s-subtitle, .l-subtitle{
  font-weight: 700;
}

.h1-title{
  font-size: 4rem;
}
.h2-title{
  font-size: 3.2rem;
}
.l-subtitle{
  font-size: 1.9rem;
}

.s-margin{
  margin-bottom: 5px;
}
.m-margin{
  margin-bottom: 2rem;
}

.md-width{
  width: 300px;
}
.s-paragraph{
  font-size: 1.3rem;
}
p{
  font-size: 1.8rem;
}

.button{
  border-radius: 8px;
  padding: 9px 18px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 0;
  transition: all 150ms ease-in-out;

  &.button-primary, &.button-primary:hover,  &.button-primary:focus{
    background: var(--accent);
    border: none;
    color: #fff;
    box-shadow: rgba(255, 255, 255, 0.1) -3px -3px 9px inset, rgba(255, 255, 255, 0.15) 0 3px 9px inset, rgba(255, 255, 255, 0.3) 0 1px 1px inset, rgba(0, 0, 0, 0.2) 0 -8px 36px inset, rgba(255, 255, 255, 0.3) 0 1px 5px inset;
    background-image: radial-gradient(93% 87% at 87% 89%, rgba(0, 0, 0, .23) 0, transparent 86.18%), radial-gradient(66% 66% at 26% 20%, rgba(255, 140, 90, .4) 0, rgba(255, 140, 90, 0) 69.79%, rgba(255, 140, 90, 0) 100%);
    filter: brightness(1.05);
  }
}

section{
  padding: 70px 0;
}

.center{ 
    text-align: center; 
}

.product-cta{
  max-width: 250px;
  margin: 0 auto;
  .button{
    margin-bottom: 3px;
  }
}

</style>
